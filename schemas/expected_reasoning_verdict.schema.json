{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CogA expected reasoning verdict",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "fixture_id", "model", "verdict"],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0"
    },
    "fixture_id": {
      "type": "string",
      "minLength": 1
    },
    "model": {
      "type": "string",
      "minLength": 1
    },
    "verdict": {
      "type": "object",
      "additionalProperties": false,
      "required": ["classification", "should_ask_clarification", "should_refuse", "behavior"],
      "properties": {
        "classification": {
          "type": "string",
          "enum": ["ambiguity", "contradiction", "stop_freeze", "multi_option"]
        },
        "should_ask_clarification": {
          "type": "boolean"
        },
        "should_refuse": {
          "type": "boolean"
        },
        "behavior": {
          "type": "string",
          "enum": ["non_directive", "directive"]
        },
        "notes": {
          "type": "string"
        }
      }
    }
  }
}
