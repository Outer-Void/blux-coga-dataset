{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CogA fixture problem",
  "type": "object",
  "additionalProperties": false,
  "required": ["fixture_id", "category", "prompt"],
  "properties": {
    "fixture_id": {
      "type": "string",
      "minLength": 1
    },
    "category": {
      "type": "string",
      "enum": ["ambiguity", "contradiction", "stop_freeze", "multi_option"]
    },
    "prompt": {
      "type": "string",
      "minLength": 1
    },
    "constraints": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "required_profile_id": {
      "type": "string",
      "minLength": 1
    },
    "required_profile_version": {
      "type": "string",
      "minLength": 1
    },
    "device": {
      "type": "string",
      "minLength": 1
    },
    "notes": {
      "type": "string"
    }
  }
}
